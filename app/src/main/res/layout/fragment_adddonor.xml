<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        tools:context=".activity_login"
        android:layout_gravity="center_horizontal"
        tools:ignore="InvalidId"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="5dp"
            tools:ignore="MissingConstraints"
            >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organisation Name"
            android:ems="10"
            android:inputType="text"
            android:id="@+id/organisation_fullName"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/add_donortextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donor Detail"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="5dp"
            tools:ignore="MissingConstraints"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:ems="10"
                android:inputType="text"
                android:id="@+id/donorFullName"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="5dp"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/donorEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="5dp"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/donorLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Location"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="5dp"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/donorPhoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Phone no."
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="92dp"
            android:layout_height="28dp"
            android:text="Items Donated"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="525dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/checkboxStationery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stationery"
                tools:layout_editor_absoluteX="263dp"
                tools:layout_editor_absoluteY="566dp" />

            <CheckBox
                android:id="@+id/checkboxClothes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clothes"
                tools:layout_editor_absoluteX="89dp"
                tools:layout_editor_absoluteY="566dp" />

            <CheckBox
                android:id="@+id/checkboxBooks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books"
                tools:layout_editor_absoluteX="184dp"
                tools:layout_editor_absoluteY="566dp" />

            <CheckBox
                android:id="@+id/checkboxFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="564dp" />



        </LinearLayout>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="620dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="5dp"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/donorDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Description"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="648dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/addDonorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="Add Donor" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />


    </LinearLayout>
</ScrollView>